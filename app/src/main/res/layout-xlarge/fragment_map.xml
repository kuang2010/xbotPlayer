<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/refresh_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.iscas.xlab.xbotplayer.customview.MapView
            android:id="@+id/map_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_width="600dp"
            android:layout_height="600dp" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_below="@id/map_view"
            android:gravity="center">
            <Button
                android:id="@+id/toggleMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bt_selector"
                android:text="显示地图"/>

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bt_selector"
                android:text="重置"/>
        </LinearLayout>

        <cn.iscas.xlab.xbotplayer.customview.RockerView
            android:id="@+id/rocker_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            app:areaBackground="@drawable/default_background"
            app:rockerBackground="@drawable/default_rocker"
            app:unavailableDrawable="@drawable/rocker_unavailable"
            app:rockerRadius="30dp"
            />
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>


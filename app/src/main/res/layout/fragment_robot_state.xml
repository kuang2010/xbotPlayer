<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/battery_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="电量"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        />
    <cn.iscas.xlab.xbotplayer.customview.PercentCircleView
        android:id="@+id/battery_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/battery_txt"
        app:radius="50dp"
        app:normal_state_color="#7cb342"
        app:mid_state_color="#ff8f00"
        app:low_state_color="#b71c1c"
        app:stroke_size="2dp"
        app:stroke_color="#00bcd4"
        app:text_size="25sp"
        app:text_color="#ab47bc"/>


    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="+6"/>

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/bt1"
        android:text="-6"/>



    <cn.iscas.xlab.xbotplayer.customview.CustomSeekBar
        android:id="@+id/seekbar_cloud_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/battery_view"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        app:is_horizontal="true"
        app:track_length="200dp"
        app:track_width="5dp"
        app:track_color="@android:color/holo_green_light"
        app:indicator_radius="9dp"
        app:indicator_color="@color/colorAccent"
        app:bubble_color="@android:color/holo_blue_light"
        app:bubble_height="25dp"
        app:bubble_width="40dp"
        app:bubble_text_size="15sp"
        app:bubble_text_color="@android:color/holo_red_light"
        app:min_value="-90"
        app:max_value="90"
        app:value_text_size="16sp"
        app:value_text_color="@color/colorPrimary"/>

    <TextView
        android:id="@+id/cloud_degree_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/seekbar_cloud_degree"
        android:text="云台角度"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/cloud_degree_txt">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <cn.iscas.xlab.xbotplayer.customview.CustomSeekBar
                android:id="@+id/seekbar_lift_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                app:is_horizontal="false"
                app:track_length="150dp"
                app:track_width="5dp"
                app:track_color="@android:color/holo_orange_light"
                app:indicator_radius="9dp"
                app:indicator_color="@color/colorAccent"
                app:bubble_color="@android:color/holo_blue_light"
                app:bubble_height="25dp"
                app:bubble_width="40dp"
                app:bubble_text_size="15sp"
                app:bubble_text_color="@android:color/holo_red_light"
                app:min_value="0"
                app:max_value="100"
                app:value_text_size="16sp"
                app:value_text_color="@color/colorPrimary"/>
            <TextView
                android:id="@+id/lift_height_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="升降台高度"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <cn.iscas.xlab.xbotplayer.customview.CustomSeekBar
                android:id="@+id/seekbar_cemera_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                app:is_horizontal="false"
                app:track_length="150dp"
                app:track_width="5dp"
                app:track_color="@android:color/holo_orange_light"
                app:indicator_radius="9dp"
                app:indicator_color="@color/colorAccent"
                app:bubble_color="@android:color/holo_blue_light"
                app:bubble_height="25dp"
                app:bubble_width="40dp"
                app:bubble_text_size="15sp"
                app:bubble_text_color="@android:color/holo_red_light"
                app:min_value="-45"
                app:max_value="45"
                app:value_text_size="16sp"
                app:value_text_color="@color/colorPrimary"/>
            <TextView
                android:id="@+id/camera_degree_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="摄像头角度"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>